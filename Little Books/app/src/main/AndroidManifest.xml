<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="false"
        android:theme="@style/Base.Theme.MainApp"
        android:usesCleartextTraffic="true"
        tools:replace="android:supportsRtl"
        tools:targetApi="31">
        <activity
            android:name=".Activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.ProfileEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.BookViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.BookDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.BookEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.BookAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.ForgetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Auth.AuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.BooksCategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PrivacyPolicyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.FavoritesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ProfileInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MyBooksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.FollowingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.FollowersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ExplorePublishersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MoreBooksActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_id" />

    </application>

</manifest>